{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Check person status"
        },
        {
            "type": "TextBlock",
            "text": "Name and Surname:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Name and Surname",
            "id": "name_surname"
        },
        {
            "type": "TextBlock",
            "text": "Time:",
            "wrap": true
        },
        {
            "type": "Input.Time",
            "id" : "time"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Check",
            "verb": "calendarCheck",
            "fallback": "Action.Submit"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}